# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation override for all HTML
[*.html]
indent_style = space
indent_size = 4

# Indentation override for all CSS, SCSS and JS
[{*.css, *.scss, *.js}]
indent_style = space
indent_size = 2

# Indentation override for package.json and .travis.yml
[{package.json, .travis.yml}]
indent_style = space
indent_size = 2
